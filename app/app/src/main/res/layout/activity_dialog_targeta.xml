<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/input_numeroTargeta"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="538dp"
        android:ems="10"
        android:hint="Numero Targeta"
        android:inputType="number"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/input_caducacion"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="183dp"
        android:layout_marginRight="124dp"
        android:layout_marginBottom="489dp"
        android:ems="10"
        android:hint="MM/YYYY"
        android:inputType="text"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/input_cvc"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="189dp"
        android:layout_marginLeft="251dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="487dp"
        android:ems="10"
        android:hint="CVC"
        android:inputType="number" />
</RelativeLayout>